{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@sdk": [
        "../desn-sdk/src/index.ts"
      ],
      "@utils": [
        "../desn-sdk/src/utils/index.ts"
      ],
      "@mybricks/rxui": [
        "../rxui"
      ],
      "@mybricks/compiler-js": [
        "../compiler-js"
      ],
      "@mybricks/comlib": [
        "../comlib/src"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}